PID_DOORD="$(pgrep -f /doord.py)"
OK_DOORD="$?"


if [ "$OK_DOORD" = "0" ]; then
	echo "OK: is running"
	exit 0
else
	echo "CRITICAL: not running - attempting restart"
	/usr/local/sbin/doord
	exit 2
fi
